{
  "compilerOptions": {
    // 目标 ECMAScript 版本
    "target": "ESNext",
    // 使用类字段的定义语法
    "useDefineForClassFields": true,
    // 模块系统类型
    "module": "ESNext",
    // 包含的库文件
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    // 模块解析策略
    "moduleResolution": "Node",
    // 严格模式，启用所有严格类型检查选项
    "strict": true,
    // JSX 处理模式
    "jsx": "react-jsx",
    // 生成 source map 文件
    "sourceMap": true,
    // 允许解析 JSON 文件
    "resolveJsonModule": true,
    // 每个文件作为单独的模块进行编译
    "isolatedModules": true,
    // 支持 ES6 模块和 CommonJS 模块之间的互操作性
    "esModuleInterop": true,
    // 跳过类型声明文件的检查
    "skipLibCheck": true,
    // 强制文件名称大小写一致
    "forceConsistentCasingInFileNames": true,
    // 基础目录，用于解析非相对模块名称
    "baseUrl": ".",
    // 路径映射，可用于简化导入路径
    "paths": {
      // 例如，使用 @ 作为 src 目录的别名
      "@/*": ["src/*"]
    },
    // 启用增量编译，加快后续编译速度
    "incremental": true,
    // 指定增量编译信息文件的路径
    "tsBuildInfoFile": "./.tsbuildinfo",
    //指定配置的全局typescript变量类型
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  // 包含的文件或目录
  "include": ["src"],
  // 排除的文件或目录
  "exclude": ["node_modules", "dist"]
}
